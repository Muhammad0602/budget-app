<%= form_for(resource, as: resource_name, html: {class: 'form'}, url: session_path(resource_name)) do |f| %>
  
  <nav class='navbar'>
    <a href="<%= root_path %>" class="back-btn">&larr;</a>
    <h3>LOGIN</h3>
    <%= f.submit "Log in", class: 'next-btn' %>
  </nav>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'text-input', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'text-input', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>
