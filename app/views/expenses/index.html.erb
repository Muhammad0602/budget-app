<p style="color: green"><%= notice %></p>

<nav class='navbar'>
  <a href="<%= categories_path %>" class="back-btn">&larr;</a>
  <h3>Transactions</h3>
  <%= link_to 'Log Out', destroy_user_session_path, 'data-turbo-method': :delete, class: 'next-btn' %>
</nav>

<div id="expenses">
  <p class="total-amount">
    <strong>Total amount: </strong>
    $<%= @expenses.sum(:amount) %>
  </p>

  <% @expenses.each do |expense| %>
    <%= render expense %>
  <% end %>
</div>

<div class="new-category">
  <%= link_to "New Transaction", new_category_expense_path(@category), class: 'category-btn' %>
</div>